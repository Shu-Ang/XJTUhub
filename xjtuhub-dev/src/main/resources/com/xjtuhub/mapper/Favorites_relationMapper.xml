<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xjtuhub.mapper.Favorites_relationMapper">

  <resultMap id="BaseResultMap" type="com.xjtuhub.entity.Favorites_relationKey">
    <id column="favorite_id" jdbcType="INTEGER" property="favoriteId" />
    <id column="blog_id" jdbcType="INTEGER" property="blogId" />
  </resultMap>

  <resultMap id="UserInfoMap" type="com.xjtuhub.entity.Favorites_relationKey" autoMapping="true">
    <id column="favorite_id" jdbcType="INTEGER" property="favoriteId" />
    <id column="blog_id" jdbcType="INTEGER" property="blogId" />
    <association property="blog" javaType="com.xjtuhub.entity.Blog">
      <result column="role_id" jdbcType="VARCHAR" property="roleId" />
    </association>
  </resultMap>

  <sql id="UserInfoList">
    favorite_id, favorites_relation.blog_id, blog.role_id
  </sql>

<!--  查询收藏数-->
  <select id="countFavoriteByRole" parameterType="com.xjtuhub.entity.Role" resultType="java.lang.Integer">
    select count(*)
    from blog, favorites_relation
    where favorites_relation.blog_id = blog.blog_id and blog.role_id = #{roleId}
  </select>

  <!--  查询收藏夹内收藏数-->
  <select id="countFavoriteByFavorite" parameterType="com.xjtuhub.entity.Favorites" resultType="java.lang.Integer">
    select count(*)
    from favorites_relation
    where favorites_relation.favorite_id = #{favoriteId}
  </select>

  <resultMap id="favoriteResultMap" type="com.xjtuhub.entity.FavoriteBlog" autoMapping="true">
    <id column="favorite_id" jdbcType="INTEGER" property="favoriteId" />
    <id column="blog_id" jdbcType="INTEGER" property="blogId" />
    <association property="blog" javaType="com.xjtuhub.entity.Blog">
    </association>
  </resultMap>

  <sql id="favoriteResultList">
    favorite_id, favorites_relation.blog_id, blog.role_id, blog.title, blog.summary, blog.release_date, blog.category
  </sql>
<!--  根据收藏夹ID查询博客列表-->
  <select id="selectBlogListByFavorite" parameterType="java.util.Map" resultMap="favoriteResultMap">
    select
    <include refid="favoriteResultList"></include>
    from favorites_relation , blog
    where favorites_relation.blog_id = blog.blog_id and favorites_relation.favorite_id = #{favorites.favoriteId}
    LIMIT #{page.limitIndex}, #{page.pageSize}
  </select>

  <!--  根据收藏夹ID查询博客列表-->
  <select id="selectBlogByFavorite" parameterType="com.xjtuhub.entity.Favorites" resultMap="favoriteResultMap">
    select
    <include refid="favoriteResultList"></include>
    from favorites_relation , blog
    where favorites_relation.blog_id = blog.blog_id and favorites_relation.favorite_id = #{favoriteId}
  </select>

<!--根据收藏夹id，博客id删除收藏关系-->
  <delete id="deleteFavoriteBlog" parameterType="com.xjtuhub.entity.Favorites_relationKey">
    delete from favorites_relation
    where favorite_id = #{favoriteId,jdbcType=INTEGER}
      and blog_id = #{blogId,jdbcType=INTEGER}
  </delete>

  <!--根据收藏夹id删除收藏关系-->
  <delete id="deleteFavoriteRelation" parameterType="com.xjtuhub.entity.Favorites">
    delete from favorites_relation
    where favorite_id = #{favoriteId,jdbcType=INTEGER}
  </delete>

  <insert id="insert" parameterType="com.xjtuhub.entity.Favorites_relationKey">
    insert into favorites_relation (favorite_id, blog_id)
    values (#{favoriteId,jdbcType=INTEGER}, #{blogId,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" parameterType="com.xjtuhub.entity.Favorites_relationKey">
    insert into favorites_relation
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="favoriteId != null">
        favorite_id,
      </if>
      <if test="blogId != null">
        blog_id,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="favoriteId != null">
        #{favoriteId,jdbcType=INTEGER},
      </if>
      <if test="blogId != null">
        #{blogId,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
</mapper>