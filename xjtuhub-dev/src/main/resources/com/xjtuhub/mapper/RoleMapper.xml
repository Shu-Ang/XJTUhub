<mapper namespace="com.xjtuhub.mapper.RoleMapper">
  <resultMap id="BaseResultMap" type="com.xjtuhub.entity.Role">
    <id column="role_id" jdbcType="VARCHAR" property="roleId" />
    <result column="face_addr" jdbcType="VARCHAR" property="faceAddr" />
    <result column="email" jdbcType="VARCHAR" property="email" />
    <result column="create_date" jdbcType="DATE" property="createDate" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="sign" jdbcType="VARCHAR" property="sign" />
    <result column="status" jdbcType="INTEGER" property="status" />
  </resultMap>
  <sql id="Base_Column_List">
    role_id, face_addr, email, create_date, password, sign, status
  </sql>
<!--  后台：只显示用户名、email、 创建时间、状态-->


<!--  查询用户列表-->
  <select id="selectRoleList" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"></include>
    from role
    where role_id != "admin"
  </select>

<!--  分页查询用户列表-->
  <select id="selectRolePage" parameterType="com.xjtuhub.entity.Page" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List"></include>
    from role
    where role_id != "admin"
    LIMIT #{limitIndex}, #{pageSize}
  </select>

<!--  查询用户总数-->
  <select id="countRole" resultType="int">
    select count(*)
    from role
    where role_id != "admin"
  </select>


